{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "bun run --watch index.ts",
    "start": "bun run index.ts",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "bun test src/modules",
    "test:unit": "find src/modules -name '*.spec.ts' -exec bun test {} +",
    "test:integration": "bun test tests/integration",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio"
  },
  "dependencies": {
    "@nubbix/domain": "workspace:*",
    "drizzle-orm": "0.45.1",
    "hono": "^4.7.0",
    "postgres": "^3.4.5",
    "resend": "^6.6.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@nubbix/eslint-config": "workspace:*",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "drizzle-kit": "0.31.8",
    "eslint": "^9",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
